.SUFFIXES: .cc

srcdir = .

top_builddir    = ..
top_srcdir      = ..

SHELL = /bin/bash



CXX = g++
CXXFLAGS = -g -O2 -D_FILE_OFFSET_BITS=64 -D_LARGE_FILES 

LDFLAGS = 
LIBS =  -lm
X_LIBS = 
X_PRE_LIBS = 
RANLIB = ranlib


BX_INCDIRS = -I.. -I$(srcdir)/.. -I../elfparser -I$(srcdir)/../elfparser \
	     -I../instrument/stubs -I$(srcdir)/../instrument/stubs

BX_OBJS = \
	osdep.o \
	pc_system.o \
	config.o \
	logio.o

BX_INCLUDES = ../bochs.h ../config.h

all: libruntime.a main.o box.o

.cc.o:
	$(CXX) -c $(BX_INCDIRS) $(CXXFLAGS) $< -o $@


libruntime.a: $(BX_OBJS)
	rm -f  libruntime.a
	ar rv $@ $(BX_OBJS)
	$(RANLIB) libruntime.a

$(BX_OBJS): $(BX_INCLUDES)

clean:
	rm -f  *.o
	rm -f  *.a

dist-clean: clean
	rm -f  Makefile

###########################################
# dependencies generated by
#  gcc -MM -I.. -I../instrument/stubs *.cc | sed 's/\.cc/.cc/g'
###########################################
box.o: box.cc 
main.o: box.cc 
osdep.o: osdep.cc 
logio.o: logio.cc 
config.o: config.cc 
pc_system.o: pc_system.cc 
