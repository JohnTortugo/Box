@SUFFIX_LINE@

srcdir = @srcdir@
VPATH = @srcdir@
top_builddir    = ..
top_srcdir      = @top_srcdir@

SHELL = @SHELL@

@SET_MAKE@

CXX = @CXX@
CXXFLAGS = @CXXFLAGS@ @GUI_CXXFLAGS@

LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
X_LIBS = @X_LIBS@
X_PRE_LIBS = @X_PRE_LIBS@
RANLIB = @RANLIB@


BX_INCDIRS = -I.. -I$(srcdir)/.. -I../elfparser -I$(srcdir)/../elfparser \
	     -I../@INSTRUMENT_DIR@ -I$(srcdir)/../@INSTRUMENT_DIR@

BX_OBJS = \
	config.o \
	logio.o

BX_INCLUDES = ../bochs.h ../config.h

all: libruntime.a main.o box.o

.@CPP_SUFFIX@.o:
	$(CXX) @DASH@c $(BX_INCDIRS) $(CXXFLAGS) @CXXFP@$< @OFP@$@


libruntime.a: $(BX_OBJS)
	@RMCOMMAND@ libruntime.a
	@MAKELIB@ $(BX_OBJS)
	$(RANLIB) libruntime.a

$(BX_OBJS): $(BX_INCLUDES)

clean:
	@RMCOMMAND@ *.o
	@RMCOMMAND@ *.a

dist-clean: clean
	@RMCOMMAND@ Makefile

###########################################
# dependencies generated by
#  gcc -MM -I.. -I../instrument/stubs *.cc | sed 's/\.cc/.@CPP_SUFFIX@/g'
###########################################
box.o: box.@CPP_SUFFIX@ 
main.o: box.@CPP_SUFFIX@ 
logio.o: logio.@CPP_SUFFIX@ 
config.o: config.@CPP_SUFFIX@ 
