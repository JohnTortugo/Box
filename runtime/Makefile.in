@SUFFIX_LINE@

srcdir = @srcdir@
VPATH = @srcdir@
top_builddir    = ..
top_srcdir      = @top_srcdir@

SHELL = @SHELL@

@SET_MAKE@

CXX = @CXX@
CXXFLAGS = @CXXFLAGS@ @GUI_CXXFLAGS@

LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
X_LIBS = @X_LIBS@
X_PRE_LIBS = @X_PRE_LIBS@
RANLIB = @RANLIB@


BX_INCDIRS = -I.. -I$(srcdir)/.. -I../elfparser -I$(srcdir)/../elfparser \
	     -I../@INSTRUMENT_DIR@ -I$(srcdir)/../@INSTRUMENT_DIR@

BX_OBJS = \
	main.o \
	config.o \
	startup.o \
	logio.o

BX_INCLUDES = ../bochs.h ../config.h ../debug.h

all: $(BX_OBJS)

.@CPP_SUFFIX@.o:
	$(CXX) @DASH@c $(BX_INCDIRS) $(CXXFLAGS) @CXXFP@$< @OFP@$@


$(BX_OBJS): $(BX_INCLUDES)

clean:
	@RMCOMMAND@ *.o init_stub.h

dist-clean: clean
	@RMCOMMAND@ Makefile

###########################################
# dependencies generated by
#  gcc -MM -I.. -I../instrument/stubs *.cc | sed 's/\.cc/.@CPP_SUFFIX@/g'
###########################################
box.o: box.@CPP_SUFFIX@ $(BX_INCLUDES)
main.o: box.@CPP_SUFFIX@ $(BX_INCLUDES)
logio.o: logio.@CPP_SUFFIX@ $(BX_INCLUDES)
startup.o: startup.@CPP_SUFFIX@ init_stub.h $(BX_INCLUDES)
config.o: config.@CPP_SUFFIX@ $(BX_INCLUDES)
init_stub.h: init_stub.S
	as -o init_stub.o init_stub.S && \
	./obj2inc.sh init_stub.o
