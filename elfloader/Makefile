.SUFFIXES: .cc

srcdir = .

top_builddir    = ..
top_srcdir      = ..

SHELL = /bin/bash



CXX = g++
CXXFLAGS = -g -O2 -D_FILE_OFFSET_BITS=64 -D_LARGE_FILES 

LDFLAGS = 
LIBS =  -lm
X_LIBS = 
X_PRE_LIBS = 
RANLIB = ranlib


BX_INCDIRS = -I. -I.. -I$(srcdir)/.. 

BX_OBJS = \
	ElfLoader.o

BX_INCLUDES = ../bochs.h ../config.h

all: libelfloader.a

.cc.o:
	$(CXX) -c $(BX_INCDIRS) $(CXXFLAGS) $< -o $@


libelfloader.a: $(BX_OBJS)
	rm -f  libelfloader.a
	ar rv $@ $(BX_OBJS)
	$(RANLIB) libelfloader.a

$(BX_OBJS): $(BX_INCLUDES)

clean:
	rm -f  *.o
	rm -f  *.a

dist-clean: clean
	rm -f  Makefile

###########################################
# dependencies generated by
#  gcc -MM -I.. -I../instrument/stubs *.cc | sed 's/\.cc/.cc/g'
###########################################
ElfLoader.o: ElfLoader.cc 
